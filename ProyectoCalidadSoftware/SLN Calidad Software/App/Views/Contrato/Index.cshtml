@model List<App.Models.ViewModels.ListContratosViewModel>
@{
    ViewBag.Title = "Contratos";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Contrato/Crear" class="btn btn-primary">Crear Contrato</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-condensed" id="contratoTable">
                <thead>
                    <tr>
                        <th>Numero Contrato</th>
                        <th>ID Empleado</th>
                        <th>Fecha Creación</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Termino</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ContratoId</td>
                            <td>@item.EmpleadoId</td>
                            <td>@item.FechaCreacion</td>
                            <td>@item.FechaInicio</td>
                            <td>@item.FechaTermino</td>
                            <td>
                                <a class="btn btn-default" href="~/Contrato/Editar/@item.ContratoId" style="text-align:right;">Editar</a>
                                <a class="btn btn-default" href="~/Contrato/Detalles/@item.ContratoId" style="text-align:right;">Detalles</a>
                                <a class="btn btn-danger" href="~/Contrato/Eliminar/@item.ContratoId" style="text-align:right;">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.dataTables.min.js"></script>

    <script>
        function activatejQueryTable() {
            $("#contratoTable").DataTable();
        }

        $(function () {
            activatejQueryTable();
        });</script>

}