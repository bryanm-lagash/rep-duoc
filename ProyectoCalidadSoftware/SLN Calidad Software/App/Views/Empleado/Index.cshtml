@model List<App.Models.ViewModels.ListEmpleadosViewModel>
@{
    ViewBag.Title = "Empleados";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Empleado/Crear" class="btn btn-primary">Crear Empleado</a>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 col-sm-8">
            <table class="table table-striped table-condensed" id="empleadoTable">
                <thead>
                    <tr>
                        <th>Rut</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Genero</th>
                        <th>Fecha Nacimiento</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Profesion</th>
                        <th>Email</th>
                        <th>Cargas</th>
                        <th></th>
                    </tr>
                </thead>
                <thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Rut</td>
                            <td>@item.Nombres</td>
                            <td>@item.Apellidos</td>
                            <td>@item.Genero</td>
                            <td>@item.FechaNacimiento</td>
                            <td>@item.Direccion</td>
                            <td>@item.Telefono</td>
                            <td>@item.Profesion</td>
                            <td>@item.Email</td>
                            <td>@item.CargasFamiliares</td>
                            <td>
                                <a class="btn btn-default btn-xs" href="~/Empleado/Editar/@item.EmpleadoId" style="text-align:right;"><span class="glyphicon glyphicon-pencil"></span></a>
                                <a class="btn btn-danger btn-xs" href="~/Empleado/Eliminar/@item.EmpleadoId" style="text-align:right;"><span class="glyphicon glyphicon-trash"></span></a>
                            </td>
                        </tr>
                    }
                </thead>
            </table>
        </div>
    </div>
</div>

<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.dataTables.min.js"></script>

    <script>
        function activatejQueryTable() {
            $("#empleadoTable").DataTable();
        }

        $(function () {
            activatejQueryTable();
        });
    </script>

}