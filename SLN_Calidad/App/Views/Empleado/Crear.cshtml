@model App.Models.ViewModels.EmpleadoViewModel
@{
    ViewBag.Title = "Registrar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-top:50px;text-align: center;">@ViewBag.Title</h2>

<hr />
@using (Html.BeginForm("Crear", "Empleado", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row" style=" justify-content:center; ">
            <div class="contenedor" style="background-color:cadetblue; display:flex;padding:25px; box-shadow:0 0 40px -10px #000;color:white;">
                <div class="form-horizontal" style="margin-right:10px;">
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(d => d.Rut, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.Rut, "", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.Rut, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(d => d.Apellidos, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.Apellidos, "", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.Apellidos, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(d => d.Telefono, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.Telefono, "", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.Telefono, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">

                        @Html.LabelFor(d => d.Direccion, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.Direccion, "", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.Direccion, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(d => d.FechaNacimiento, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.FechaNacimiento, "", htmlAttributes: new { type = "date", @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.FechaNacimiento, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-horizontal" style="margin-left:10px;">
                    <div class="form-group">
                        @Html.LabelFor(d => d.Nombres, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.Nombres, "", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.Nombres, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(d => d.Genero, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.Genero, "", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.Genero, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(d => d.Profesion, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.Profesion, "", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.Profesion, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(d => d.Email, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.Email, "", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(d => d.CargasFamiliares, htmlAttributes: new { @class = "form-label" })
                        @Html.TextBoxFor(d => d.CargasFamiliares, "", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(d => d.CargasFamiliares, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group" style="text-align:center;">
                        <input type="submit" value="Guardar" class="btn btn-success float-right" />
                    </div>

                    @*<div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(d => d.ImagePath, htmlAttributes: new { @class = "form-label" })
                            <div class="col-md-10">
                                <img src="@Url.Content(Model.ImagePath)" style="margin:10px" height="200" width="200" id="imagePreview" />
                                <input type="file" name="ImageUpload" accept="image/jpeg, image/png" onchange="ShowImagePreview(this,document.getElementById('imagePreview'))" />
                            </div>
                        </div>
                    </div>*@

                </div>
            </div>
        </div>
    </div>
}

