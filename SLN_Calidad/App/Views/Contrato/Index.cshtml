@model List<App.Models.ViewModels.ListContratosViewModel>
@{
    ViewBag.Title = "Contratos";
}

<h2 style="margin-top:50px;">@ViewBag.Title</h2>

<a href="~/Contrato/Crear" class="btn btn-primary" style="margin-left:20px; margin-bottom:20px; margin-top:10px;">Crear Contrato</a>

<table class="table table-striped table-condensed" id="contratoTable">
    <thead>
        <tr>
            <th>Numero Contrato</th>
            <th>Rut Empleado</th>
            <th>Fecha Creación</th>
            <th>Fecha Inicio</th>
            <th>Numero de Horas</th>
            <th>Tipo de Hora</th>
            <th>Afp</th>
            <th>Prevision</th>
            <th>Bonificacion</th>
            <th>Sueldo Base</th>
            <th>Sueldo Bruto</th>
            <th>Sueldo Liquido</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ContratoId</td>
            <td>@item.RutEmpleado</td>
            <td>@item.FechaCreacion</td>
            <td>@item.FechaInicio</td>
            <td>@item.NumeroHoras</td>
            <td>@item.TipoHora</td>
            <td>@item.AfpNombre</td>
            <td>@item.NombreSalud</td>
            <td>@item.NombreBonif</td>
            <td>@item.SueldoBase</td>
            <td>@item.SueldoBruto</td>
            <td>@item.SueldoLiquido</td>
            <td>
                <a class="btn btn-outline-primary" href="~/Contrato/Editar/@item.ContratoId" style="text-align:right;">Editar</a>
               
                <a class="btn btn-outline-danger" href="~/Contrato/Eliminar/@item.ContratoId" style="text-align:right;">Eliminar</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.dataTables.min.js"></script>

    <script>
        function activatejQueryTable() {
            $("#contratoTable").DataTable();
        }

        $(function () {
            activatejQueryTable();
        });</script>

}
